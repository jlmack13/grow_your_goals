<h5>Welcome, <%= current_user.name %></h5>

<h1>Goal: <%= @goal.name %></h1>
<p>Description: <%= @goal.description %></p>
<h3><%= pluralize(@goal.categories.count, "Category") %></h3>
<% @goal.categories.each do |c| %>
  <h3><%= c.name %></h3>
<% end %>
<h3>Tasks:</h3>
<% @goal.tasks.each do |a| %>
  <h4><%= a.name %></h4>
<% end %>
<%= link_to "New Task", new_goal_task_path(@goal) %>

<%= link_to "Edit Goal", new_goal_task_path(@goal) %>
<%= link_to "Delete Goal", goal_path(@goal), method: :delete %>
