<div class="back-button">
  <p>&#8592;</p>
  <%= link_to 'Back to Goal', goal_path(@task.goal)%>
</div>

<h1><%= @task.name %></h1>
<h4><%= @task.status %></h4>
<p><%= @task.description %></p>
<div class="btn btn-info button">
  <%= link_to "Edit Task", edit_goal_task_path(@task) %>
</div>

<div class="btn btn-danger button">
  <%= link_to "Delete Task", task_path(@task), method: :delete %>
</div>
