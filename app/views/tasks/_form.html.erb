<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :goal_id %>

  <div class="field form-group row grow-form">
    <%= f.label :name %>
    <%= f.text_field :name, :class => 'form-control' %>
  </div><br>

  <div class="field form-group row grow-form">
    <%= f.label :description %>
    <%= f.text_field :description, :class => 'form-control' %>
  </div><br>


  <div class="field form-group row grow-form">
    <%= f.label :status %>
    <%= f.select :status, options_for_select([["Incomplete", "Incomplete"], ["Complete", "Complete"]]), :class => 'form-control'  %>
  </div>

  <div class="actions">
    <%= f.submit  :class => 'btn btn-success' %>
  </div>

<% end %>
